<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_product_name"
            android:text="Product Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_product_price"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Price"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:id="@+id/dialog_product_quantity"
            android:inputType="number"
            android:textAlignment="textStart"
            android:maxLength="4"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="@android:color/white"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:hint="Enter Quantity"
            />

        <Button
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:id="@+id/dialog_add_to_cart"
            android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Add to Cart"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/dialog_image"
        android:src="@drawable/ic_launcher_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>