<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundfragment"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.retailerclient.ProductDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:id="@+id/backbutton"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/backProductDetails"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back_white_24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/backbutton">

            <!--cardview for image-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:id="@+id/image"
                    android:layout_height="match_parent"
                    android:src="@color/colorAccent"/>
            </android.support.v7.widget.CardView>


            <!--cardview for product name and product price-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imagedesc"

                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:text="productname"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/prodPrice"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:text="productprice(GST)"
                        android:textSize="18sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/imageSizeTitle"

                            android:text="Size :"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageSize"
                            android:textColor="@color/white"
                            android:layout_toEndOf="@+id/imageSizeTitle"

                            android:text="productsize"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/ipqTitle"

                            android:text="Inner Pack Quantity :"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ipq"
                            android:textColor="@color/white"
                            android:layout_toEndOf="@+id/imageSizeTitle"

                            android:text="ipq"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--cardview for quantity analysis-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/cardview_dark_background"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="20sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            />
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:id="@+id/btnDecrease"
                            android:textColor="@color/white"
                            android:background="@color/backgroundfragment"
                            android:textSize="20sp"/>

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/quantity"
                            android:maxLength="4"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            app:met_baseColor="@color/colorAccent"
                            android:inputType="number"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            />

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:id="@+id/btnIncrease"
                            android:textColor="@color/white"
                            android:background="@color/backgroundfragment"
                            android:textSize="20sp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Add"
                            android:padding="10dp"
                            android:layout_marginStart="50dp"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/ic_add_shopping_cart_white_24dp"
                            android:id="@+id/addToCart"
                            android:background="@color/colorAccent"
                            android:textColor="@color/white"
                            android:elevation="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:text="Total Price :"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:text="price"
                            android:id="@+id/dynamicprice"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <!--cardview for product details-->
            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgDescription"
                    />

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
